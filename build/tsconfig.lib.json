{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "../lib",
    "moduleResolution": "node",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "baseUrl": "./",
    "paths": {
      "@/*": ["test/*"],
      "~/*": ["./*"],
    },
  },
  "include": ["../core"],
}
